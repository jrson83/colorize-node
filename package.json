{
  "name": "colorize-node",
  "version": "0.5.0",
  "description": "A lightweight library to color Node.js terminal output.",
  "keywords": [
    "color",
    "colorize",
    "console",
    "node",
    "node.js",
    "process",
    "stdout",
    "terminal"
  ],
  "homepage": "https://jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/colorize-node/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/colorize-node.git"
  },
  "license": "MIT",
  "author": "JÃ¶rn Spangenberg <github@jrson.me> (https://jrson.me)",
  "type": "module",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "files": ["dist"],
  "scripts": {
    "clean": "rm -rf dist",
    "dev": "tsx src/index.ts",
    "build": "pkgroll --target=node18.12.0 --minify",
    "lint": "biome check --apply-unsafe .",
    "fmt": "biome format . --write",
    "test": "node --import=tsx/esm --test ./test/colorize.test.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.2.2",
    "@types/node": "^20.6.2",
    "husky": "^9.0.10",
    "nano-staged": "^0.8.0",
    "pkgroll": "^2.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.12.0",
    "pnpm": ">=8.12.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "nano-staged": {
    "*.ts": "biome check --apply-unsafe .",
    "*": "biome format . --write"
  },
  "packageManager": "pnpm@8.15.1"
}
