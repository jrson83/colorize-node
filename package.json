{
  "name": "colorize-node",
  "version": "0.3.1",
  "description": "A lightweight library to color Node.js terminal output.",
  "keywords": [
    "color",
    "colorize",
    "console",
    "node",
    "node.js",
    "process",
    "stdout",
    "terminal"
  ],
  "homepage": "https://jrson.me",
  "bugs": {
    "url": "https://github.com/jrson83/colorize-node/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrson83/colorize-node.git"
  },
  "license": "MIT",
  "author": "JÃ¶rn Spangenberg <github@jrson.me> (https://jrson.me)",
  "exports": {
    "types": "./dist/index.d.ts",
    "require": "./dist/index.cjs",
    "import": "./dist/index.mjs"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": ["dist", "src"],
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "unbuild",
    "stub": "unbuild --stub",
    "clean": "rm -rf dist",
    "lint": "rome check --apply-unsafe .",
    "fmt": "rome format . --write",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "husky": "^8.0.0",
    "nano-staged": "^0.8.0",
    "rome": "^12.1.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3",
    "unbuild": "^1.2.1",
    "vitest": "^0.34.0"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": "use `pnpm` instead",
    "pnpm": ">=8.6.0",
    "yarn": "use `pnpm` instead"
  },
  "publishConfig": {
    "access": "public"
  },
  "nano-staged": {
    "*.ts": "rome check --apply-unsafe .",
    "*": "rome format --write ."
  },
  "packageManager": "pnpm@8.7.6"
}
